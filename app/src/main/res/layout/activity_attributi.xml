<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.proponi.Attributi">


    <ImageButton
        android:id="@+id/returnc"
        android:layout_width="69dp"
        android:layout_height="68dp"
        android:backgroundTint="#00FFFFFF"
        android:rotationY="180.0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.084"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.975"
        app:srcCompat="@mipmap/avanti" />

    <LinearLayout
        android:layout_width="351dp"
        android:layout_height="497dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.615"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.182">

        <TextView
            android:id="@+id/textView16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DETTAGLI "
            android:textColor="#3F51B5"

            android:textSize="30sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="41dp" />

        <EditText
            android:id="@+id/tipoArrampicata"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Tipo di arrampicata "
             />

        <Space
            android:layout_width="match_parent"
            android:layout_height="28dp" />

        <EditText
            android:id="@+id/mezzoTrasporto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Mezzo di trasporto"
            />

        <Space
            android:layout_width="match_parent"
            android:layout_height="28dp" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Attrezzatura"
            android:textColor="#3F51B5"
            android:textSize="25sp" />

        <CheckBox
            android:id="@+id/corda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="corda" />

        <CheckBox
            android:id="@+id/imbrago"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="imbrago" />

        <CheckBox
            android:id="@+id/rinvii"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="rinvii" />

        <CheckBox
            android:id="@+id/assicuratore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="assicuratore" />


    </LinearLayout>

    <ImageButton
        android:id="@+id/conferma2"
        android:layout_width="69dp"
        android:layout_height="68dp"
        android:backgroundTint="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.923"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.975"
        app:srcCompat="@mipmap/avanti" />
</androidx.constraintlayout.widget.ConstraintLayout>